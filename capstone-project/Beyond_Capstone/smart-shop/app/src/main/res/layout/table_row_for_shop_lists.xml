<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/items_list_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingStart="@dimen/size_1dp"
    android:paddingEnd="@dimen/size_1dp">

    <TextView
        android:id="@+id/list_name_attr"
        android:layout_width="@dimen/size_210dp"
        android:layout_height="@dimen/size_45dp"
        android:layout_gravity="start"
        android:gravity="start"
        android:paddingStart="@dimen/size_10dp"
        android:paddingTop="@dimen/size_10dp"
        android:text="@string/shop_list_name"
        android:textSize="@dimen/text_size_18sp" />

    <ImageButton
        android:id="@+id/playListBtn"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_30dp"
        android:paddingTop="@dimen/size_15dp"
        android:contentDescription="@string/play_list"
        android:src="@drawable/play" />

    <View
        android:layout_width="@dimen/size_10dp"
        android:layout_height="@dimen/size_0dp" />

    <ImageButton
        android:id="@+id/editListBtn"
        android:layout_width="@dimen/size_25dp"
        android:layout_height="@dimen/size_40dp"
        android:contentDescription="@string/edit_list_item"
        android:src="@drawable/edit" />

    <View
        android:layout_width="@dimen/size_5dp"
        android:layout_height="@dimen/size_0dp" />

    <ImageButton
        android:id="@+id/shareListBtn"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="@dimen/size_35dp"
        android:paddingTop="@dimen/size_15dp"
        android:contentDescription="@string/share_list"
        android:src="@drawable/share" />

    <ImageButton
        android:id="@+id/deleteListBtn"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="@dimen/size_40dp"
        android:paddingTop="@dimen/size_15dp"
        android:contentDescription="@string/delete_list"
        android:src="@drawable/delete" />

</TableRow>