<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/items_list_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/contact_cb" />

    <LinearLayout
        android:layout_width="@dimen/size_300dp"
        android:layout_height="@dimen/size_60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name_attr"
            android:layout_width="@dimen/size_300dp"
            android:layout_height="@dimen/size_25dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:paddingEnd="@dimen/size_1dp"
            android:paddingStart="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:text="@string/contact_name"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_number_attr"
            android:layout_width="@dimen/size_300dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:paddingStart="@dimen/size_10dp"
            android:text="@string/contact_number"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

</TableRow>